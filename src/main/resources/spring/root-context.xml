<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
				<value>classpath:/spring/database/jdbc.properties</value>
				<value>classpath:/spring/database/hibernate.properties</value>
            </list>
        </property>
    </bean>

    <import resource="hibernate-context.xml"/>

	<context:component-scan base-package="com.multimedia.seabattle.service"/>

	<context:component-scan base-package="com.multimedia.seabattle.config"/>

<!-- localization -->

	<!-- bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource"-->
		<!-- property name="defaultEncoding" value="UTF-8"/-->
	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="useCodeAsDefaultMessage" value="true"/>
		<property name="basenames">
			<list>
				<value>msg/common</value>
			</list>
		</property>
	</bean>

<!-- declare the resolver -->
<bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
	<property name="defaultLocale" value="ru"/>
</bean>

<!-- email -->
	<bean id="templateMessage" class="org.springframework.mail.SimpleMailMessage">
		<property name="from" value="Dmitriy_Demchuk@epam.com"/>
	</bean>
	
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="EPHUBUDSA0035.epam.com"/>
		<property name="username" value=""/>
		<property name="password" value=""/>
	</bean>

   <bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
      <property name="velocityProperties">
         <value>
    		resource.loader=class
    		class.resource.loader.class=org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
         </value>
      </property>
   </bean>


</beans>
